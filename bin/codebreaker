#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.expand_path('../../app', __FILE__))
require 'codebreaker'

game = Codebreaker::Game.new(STDOUT)
secret_number = '4321'
game.start(secret_number)

while (guess = gets.chomp)
  game.guess(guess)
end
